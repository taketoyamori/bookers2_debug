
<% comments.each do |comment| %>
<tr>
 <td>
   <p><%= attachment_image_tag comment.user, :profile_image, :fill, 60, 60, fallback: "no-image-mini.jpg" %></p>
   <%= link_to comment.user.name, user_path(comment.user.id) %>
 </td>
 <td>
    <%= comment.comment %>
 </td>
 <td>
    <% if comment.user == current_user %>
    <div type="button" class="btn btn-danger">
      <%= link_to "Destroy", book_comment_path(comment.book_id, comment.id), method: :delete, remote: true, class: "text-white"  %>
    </div>
    <% end %>
 </td>
</tr>
<% end %>