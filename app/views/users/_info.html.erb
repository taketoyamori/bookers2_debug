<table class='table'>
  <tr><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
	  <th>follows</th>
	  <th><%= link_to user.followings.count, follows_user_path(user) %></th>
  </tr>
  <tr>
	  <th>followers</th>
	  <th><%= link_to user.followers.count, followers_user_path(user) %></th>
  </tr>
</table>


    <% if current_user != user %>
     <div type="button" class="btn btn-success mb-3">
      <% if user.followed_by?(current_user) %>
        <%= link_to "フォローを外す", user_relationships_path(user.id), method: :delete, class: "text-white" %>
      <% else %>
        <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: "text-white" %>
      <% end %>
     </div>
    <% end %>


<div class='row'>
  <%= link_to '',edit_user_path(user),class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{user.id}" %>
</div>